<h1>Here is the few last posts</h1>
<% @posts.each do |post| %> 
  <h2><%= link_to post.title, post_path(post) %></h2>
  <p><%= post.body %></p>
  <small>
    <time><%= post.created_at.to_date.strftime("%d %B, %Y") %></time>
    |
    <%= link_to post.blog.name, post.blog %>
     by 
    <%= post.blog.user.username %>
    <%# if owner?(post.blog) %>
      
      <%#= link_to 'Edit', edit_blog_path(post.blog) %>
      
      <%#= link_to 'Erase', blog_path(post.blog), method: :delete, data: {confirm: 'Are you sure?'} %>
    <%# end %>
  </small>
<% end %>