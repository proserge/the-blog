<%= form_for [@post, @comment] do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Publish', class: 'btn btn-primary' %>
    <%= link_to '<< Back', :back, class: 'btn btn-outline-secondary' %>
  </div>
  <% f.hidden_field :post_id %>
<% end %>