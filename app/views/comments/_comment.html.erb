<article class="comment">
  <section class="comment-body">
    <%= simple_format(comment.body) %>
  </section>
  <small>
    <time><%= comment.created_at.to_date.strftime("%d %B, %Y") %></time>
    <% if owner?(comment.blog) %>
      <%= link_to 'Erase', blog_comments_path(comment), method: :delete, data: {confirm: 'Are you sure?'} %>
      <% end %>
    </small>
</article>